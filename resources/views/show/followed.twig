{% extends '/home.twig' %}

{% block content %}
    <div class="row">
    {% if followed is empty %}
    <div class="alert alert-info">
        <p>You have no shows in your list. click <a href="{{ path_for('show.all') }}">here</a> to add shows to your list</p>
    </div>
    {% endif %}
    {% for idx, show in followed %}
            <div class="col-md-4 col-sm-6">
                {% include '/partials/item.twig' with {show : show} %}
            </div>
            {% if(idx+1) % 3 == 0 %}
                </div>
                <div class="row">
            {% endif %}

    {% endfor %}
    </div>
{% endblock %}

